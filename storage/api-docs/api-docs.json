{
    "openapi": "3.0.0",
    "info": {
        "title": "Hyperhire Tinder API",
        "description": "API Documentation for Hyperhire Tinder Application",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api",
            "description": "API Server"
        }
    ],
    "paths": {
        "/people/recommended": {
            "get": {
                "tags": [
                    "People"
                ],
                "summary": "Get recommended people based on location",
                "description": "Returns a paginated list of recommended people sorted by distance from the provided coordinates",
                "operationId": "648fbff13f772eeb614327986a34f2f0",
                "parameters": [
                    {
                        "name": "lat",
                        "in": "query",
                        "description": "Latitude for recommendation",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "format": "float",
                            "example": -6.2088
                        }
                    },
                    {
                        "name": "lng",
                        "in": "query",
                        "description": "Longitude for recommendation",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "format": "float",
                            "example": 106.8456
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1,
                            "example": 1
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of items per page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 20,
                            "example": 20
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "current_page": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 10
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Alicia"
                                                    },
                                                    "age": {
                                                        "type": "integer",
                                                        "example": 23
                                                    },
                                                    "pictures": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "string"
                                                        },
                                                        "example": [
                                                            "https://cdn.app.com/1.jpg",
                                                            "https://cdn.app.com/2.jpg"
                                                        ]
                                                    },
                                                    "distance_km": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 1.2
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The lat field is required."
                                        },
                                        "errors": {
                                            "type": "object",
                                            "additionalProperties": {
                                                "type": "array",
                                                "items": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "People",
            "description": "People"
        }
    ]
}